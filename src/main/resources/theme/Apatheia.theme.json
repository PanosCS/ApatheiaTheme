{
  "name": "Apatheia",
  "dark": true,
  "author": "Tsaf",
  "editorScheme": "/theme/Apatheia.xml",
  "colors": {
    "secondaryAccentColor": "#0094ff",
    "primaryBackground": "#292e39",
    "primaryForeground": "#d8dee9",
    "selectionBackground": "#3e434d",
    "selectionInactiveBackground":"#32363e",
    "hoverBackground": "#383c45",
    "borderColor": "#191c22",

    "iceberg": "#d7f4f1",
    "lochinvar": "#2b8f89",
    "bluelagoon": "#00838d",
    "redberry": "#8d0900"
  },
  "ui": {
    "*": {
      "background": "primaryBackground",
      "foreground": "primaryForeground",
      "underlineColor": "lochinvar",

      "selectionForeground": "primaryForeground",
      "selectionInactiveForeground": "primaryForeground",
      "selectionBackground": "selectionBackground",
      "selectionInactiveBackground": "selectionInactiveBackground",
      "inactiveBackground": "primaryBackground",
      "disabledBackground": "primaryBackground",
      "borderColor": "borderColor",
      "disabledBorderColor": "primaryBackground",

      "separatorColor": "#7f8288"
    },
    "Borders": {
      "color": "borderColor",
      "ContrastBorderColor": "borderColor"
    },
    "ActionButton": {
      "hoverBackground": "hoverBackground",
      "hoverBorderColor": "hoverBackground"
    },
    "Bookmark": {
      "iconBackground": "#fcc03f",
      "Mnemonic": {
        "iconForeground": "primaryForeground",
        "iconBackground": "#89703C",
        "iconBorderColor": "#fcc03f"
      }
    },
    "BookmarkMnemonicAvailable": {
    },
    "BookmarkMnemonicCurrent": {

      "buttonForeground": "primaryForeground",
      "buttonBackground": "#8d6b81",
      "borderColor": "redberry"
    },
    "Button": {
      "arc": "12",
      "foreground": "primaryForeground",
      "startBorderColor": "selectionBackground",
      "endBorderColor": "selectionBackground",
      "startBackground": "#4f566d",
      "endBackground": "#4f566d",
      "focusedBorderColor": "secondaryAccentColor",
      "disabledBorderColor": "#4f566d",
      "default": {
        "foreground": "primaryForeground",
        "startBackground": "selectionBackground",
        "endBackground": "selectionBackground",
        "startBorderColor": "secondaryAccentColor",
        "endBorderColor": "secondaryAccentColor",
        "focusColor": "secondaryAccentColor",
        "focusedBorderColor": "secondaryAccentColor"
      }
    },
    "Component": {
      "focusColor": "secondaryAccentColor",
      "borderColor": "selectionBackground",
      "focusedBorderColor": "selectionBackground",
      "disabledBorderColor": "selectionBackground",
      "errorFocusColor": "#ff5554",
      "inactiveErrorFocusColor": "#ff5554",
      "warningFocusColor": "#f1fa8c",
      "inactiveWarningFocusColor": "#f1fa8c"
    },
    "Editor": {
      "background": "#212732",
      "shortcutForeground": "lochinvar",
      "SearchField": {
        "background": "#212732",
        "borderInsets": "bluelagoon"
      }
    },
    "EditorTabs": {
      "background": "#212732",
      "underlinedTabBackground": "#292b38",
      "underlineHeight": 2
    },
    "FileColor": {
      "Blue": "#ff0000"
    },
    "Label": {
      "errorForeground": "redberry"
    },
    "Notification": {
      "ToolWindow": {
        "warningForeground": "primaryForeground",
        "warningBackground": "primaryBackground",
        "warningBorderColor": "#ffb86c",
        "errorForeground": "primaryForeground",
        "errorBorderColor": "redberry",
        "errorBackground": "primaryBackground",
        "informativeForeground": "primaryForeground",
        "informativeBackground": "primaryBackground",
        "informativeBorderColor": "#50fa7b"
      }
    },
    "Plugins.hoverBackground": "redberry",
    "Plugins.lightSelectionBackground": "redberry",
    "Plugins.Tab.selectedBackground": "redberry",

    "TabbedPane": {
      "tabSelectionHeight": 1,
      "focusColor": "redberry",
      "hoverColor": "redberry",
      "underlineColor": "redberry",
      "contentAreaColor": "redberry"
    },

    "ToolWindow": {
      "Button.hoverBackground": "hoverBackground",
      "Header": {
        "background": "#212732",
        "inactiveBackground": "primaryBackground"
      }
    },
    "WelcomeScreen": {
      "captionBackground": "redberry",
      "footerBackground": "redberry",
      "headerBackground": "#00ff00",
      "headerForeground": "#0000ff",
      "Projects": {
        "background": "redberry"
      }
    }
  },
  "icons": {
    "ColorPalette": {
      "Actions.Blue": "#0094ff",
      "Actions.Green": "#8bd982"
    }
  }
}